<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    android:orientation="vertical"
    android:textAlignment="center" >

    <RelativeLayout
        android:id="@+id/headRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/bg_headbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:paddingTop="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_top" />

        <ImageButton
            android:id="@+id/DeleteMed"
            android:layout_width="68dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/trash_btn_selector" />

        <TextView
            android:id="@+id/createmedication_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/medication"
            android:textAlignment="center"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/med_create"
            android:layout_width="68dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/save_btn_selector" />
    </RelativeLayout>

    <EditText
        android:id="@+id/med_drug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/headRL"
        android:layout_marginTop="22dp"
        android:background="@drawable/username"
        android:ellipsize="end"
        android:ems="10"
        android:hint="@string/drug"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:textSize="19sp" />

    <EditText
        android:id="@+id/med_dosage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/med_drug"
        android:background="@drawable/username"
        android:ellipsize="end"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="@string/dosage"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:textSize="19sp" />

    <EditText
        android:id="@+id/med_freq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/med_dosage"
        android:background="@drawable/username"
        android:ellipsize="end"
        android:ems="10"
        android:hint="@string/frequency"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:textSize="19sp" />

    <EditText
        android:id="@+id/med_startdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/med_freq"
        android:background="@drawable/username"
        android:ellipsize="end"
        android:ems="10"
        android:hint="@string/start_date"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:textSize="19sp" />

    <EditText
        android:id="@+id/med_enddate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/med_startdate"
        android:background="@drawable/username"
        android:ellipsize="end"
        android:ems="10"
        android:hint="@string/end_date"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:textSize="19sp" />

</RelativeLayout>